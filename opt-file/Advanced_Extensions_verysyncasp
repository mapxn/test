function initial(){
    show_banner(1);
    show_menu(8,<% nvram_get_x("", "verysync_L2"); %>,<% nvram_get_x("", "verysync_L3"); %>);
    show_footer();
    change_verysync_enable(1);

}

function applyRule(){
//    if(validForm()){
        showLoading();
        
        document.form.action_mode.value = " Apply ";
        document.form.current_page.value = "/Advanced_Extensions_app06.asp";
        document.form.next_page.value = "";
        
        document.form.submit();
//    }
}

function done_validating(action){
    refreshpage();
}

function change_verysync_enable(mflag){
	var m = document.form.app_20.value;
	var is_verysync_enable = (m == "1") ? "重启" : "更新";
	document.form.updateverysync.value = is_verysync_enable;
}
function button_updateverysync(){
    change_verysync_enable(1);
	var $j = jQuery.noConflict();
	$j.post('/apply.cgi',
	{
		'action_mode': ' updateapp6 ',
	});
}
function button_verysync_wan_port(){
        var port = document.form.app_21.value;
        if (port == '')
            var port = '8886';
        var porturl ='http://' + window.location.hostname + ":" + port;
        //alert(porturl);
        window.open(porturl,'verysync_wan_port');
}
